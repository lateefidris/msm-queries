<h1> Actor #<%= @actor.id%> details</h1>

<a href="/actors">Go Back</a>


<hr>

<dl>
  <dt>Name</dt>
  <dd> <%= @actor.name%> </dd>

  <dt>Dob</dt>
  <dd> <%= @actor.dob%> </dd>

  <dt>Bio</dt>
  <dd> <%= @actor.bio%> </dd>

  <dt>Image</dt>
  <dd> <img src="<%= @actor.image%>" width = 200> </dd>

   <dt>Created at</dt>
  <dd> <%= @actor.created_at%> </dd>

   <dt>Updated at</dt>
  <dd> <%= @actor.updated_at%> </dd>
</dl>

<hr>

<h2>Filmography</h2>
<%= @characters %>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th></th>
    
  </tr>

  <% @characters.all.each do |role| %>
    <% @movie = Movie.where({ :id => role.movie_id }).at(0)%>
    <% @director = Director.where({ :id => @movie.director_id }).at(0)%>
  
   <tr>
    <td> <%= @movie.title %> </td>
    <td> <%= @movie.year %> </td>
    <td> <%= @director.name %> </td>
    <td> <%= role.name%> </td>
    <td> <a href="/movies/<%= @movie.id%>" >Show details</a> </td>
  </tr>
  <% end %>
</table>
