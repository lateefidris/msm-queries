<h1>List of actors</h1>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th></th>
    
  </tr>

  <% Actor.all.each do |actor| %>
   <tr>
    <td> <%= actor.id%> </td>
    <td> <img src="<%= actor.image%>" width="100"> </td>
    <td> <%= actor.dob%> </td>
    <td> <%= actor.name%> </td>
    <td> <a href="/actors/<%= actor.id%>" >Show details</a> </td>
  </tr>
  <% end %>
</table>
